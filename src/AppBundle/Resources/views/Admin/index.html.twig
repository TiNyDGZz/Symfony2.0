{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            {{ render(controller('FOSUserBundle:Security:login')) }}
            <h1>Admin list</h1>
            <ul>
                {% for admin in admins %}
                    <li>{{ admin.firstName }} - {{ admin.lastName }} <a
                                href="{{ path('admin_delete', {id: admin.id }) }}">Delete Admin</a></li>
                {% endfor %}
            </ul>
            <h1>Students list</h1>


            <ul>
                {% for student in students %}
                    <li>{{ student.firstName }} - {{ student.lastName }} <a
                                href="{{ path('student_delete', {id: student.id }) }}">Delete Student</a></li>
                {% endfor %}
            </ul>
            <a href="{{ path('student_add') }}">Add Student</a>
            </br>
            <h1>Exam</h1>
            <ul>
                {% for exam in exams %}
                    <li>{{ exam.name }} - {{ exam.description }} <a href="{{ path('exam_delete', {id: exam.id }) }}">Delete
                            Exam</a></li>
                {% endfor %}
            </ul>
            <a href="{{ path('exam_add') }}">Add Exam</a>

            <h1>Grade</h1>
            <ul>
                {% for grade in grades %}
                    <li>{{ grade.gradeNumber }} <a href="{{ path('grade_delete', {id: grade.id }) }}">Delete Grade</a>
                    </li>
                {% endfor %}
            </ul>
            <a href="{{ path('grade_add') }}">Add Grade</a>



        </div>
    </div>
</div>
<script src="http://code.jquery.com/jquery.js"></script>
<script src="../style/js/bootstrap.min.js"></script>
{% endblock %}